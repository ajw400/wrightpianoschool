<%= simple_form_for @student do |f| %>
<%= f.input :first_name %>
<%= f.input :last_name %>
<%= f.input :phone %>
<%= f.input :email %>
<%= f.input :languages %>
<%= f.input :in_home %>
<h3>Add children (optional)</h3>
<div id="student_children">
  <%= f.simple_fields_for :student_children do |student_child| %>
    <%= render 'student_child_fields', f: student_child %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'add child', f, :student_children %>
  </div>
</div>
<%= f.submit %>
<% end %>
