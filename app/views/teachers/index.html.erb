<%= render 'shared/navbar' %>
<%= render 'shared/flashes' %>
<div class="main-container">
   <section class="">
      <div class="container">
         <div class="row justify-content-center text-center section-intro">
            <div class="col-12 col-md-9 col-lg-8">
              <h1><%= t(".header") %></h1>
              <p><%= t(".paragraph") %></p>
            </div>
         </div>
      </div>
   </section>
   <section class="flush-with-above">
      <div class="container">
         <div class="card-columns">
            <% @teachers.each do |teacher| %>
            <%= link_to teacher_path(teacher) do %>
            <div class="card">
               <% if teacher.photo? && 1==2%>
                <%= cl_image_tag teacher.photo.path, height: 297, width: 297, crop: :fill, gravity: :face, class: "img-fluid rounded card-img" %>

               <% else %>
               <%= image_tag "placeholder.png", class: "image-fluid rounded card-img" %>
               <% end %>
               <div class="card-footer">
                  <h5 class="mb-0"><%= "#{teacher.first_name} #{teacher.last_name}" %></h5>
                  <span><%= teacher.location %></span>
               </div>
            </div>
            <% end %>
            <% end %>
            <!--end of col-->
         </div>
         <!--end of row-->
      </div>
      <!--end of container-->
   </section>
   <!--end of section-->
</div>
