<%= render 'shared/navbar' %>
<%= render 'shared/flashes' %>
<div class="main-container">
   <section class="">
      <div class="container">
         <div class="row justify-content-center text-center section-intro">
            <div class="col-12 col-md-9 col-lg-8">
               <h1>Teachers</h1>
               <p>Please click on a teacher to display their full information!</p>
            </div>
         </div>
      </div>
   </section>
   <section class="flush-with-above">
      <div class="container">
         <div class="row no-gutters justify-content-center">
            <div class="col-12 col-lg-10">
               <div class="feature-list row justify-content-center">
                  <% @teachers.each do |teacher| %>
                  <div class="col-6 col-lg-4">
                     <% if teacher.photo? %>
                     <%= cl_image_tag teacher.photo.path, height: 300, width: 400, crop: :fill, gravity: :face, class: "img-fluid rounded mb-3 card-img" %>
                     <% else %>
                     <%= image_tag "placeholder.png", height: 300, width: 400, crop: :fill, class: "image-fluid rounded mb-3 card-img" %>
                     <% end %>
                     <div class="card-footer">
                        <h5 class="mb-0"><%= "#{teacher.first_name} #{teacher.last_name}" %></h5>
                        <span><%= teacher.location %></span>
                        <div class="mt-2">
                           <%= link_to "Learn More", teacher_path(teacher), class: "btn btn-lg btn-link text-success" %>
                        </div>
                     </div>
                  </div>
                  <% end %>
                  <!--end of col-->
               </div>
            </div>
         </div>
         <!--end of row-->
      </div>
      <!--end of container-->
   </section>
   <!--end of section-->
</div>
