<%= render 'shared/navbar' %>
<%= render 'shared/flashes' %>
<div class="main-container">
  <section class="">
    <div class="container">
      <div class="row justify-content-center text-center section-intro">
        <div class="col-12 col-md-9 col-lg-8">
          <h1>Teachers</h1>
          <p>Please click on a teacher to display their full information!</p>
        </div>
      </div>
    </div>
  </section>
  <section class="flush-with-above">
    <div class="container">
      <!--end of row-->
      <div class="row no-gutters justify-content-center">
        <div class="col-12 col-lg-10">
          <ul class="feature-list row">
            <% @teachers.each do |teacher| %>
              <%= link_to teacher_path(teacher) do %>

            <li class="col-6 col-lg-4">
              <% if teacher.photo? %>
                <%= cl_image_tagnteacher.photo.path, height: 300, width: 400, crop: :fill, gravity: :face, height:300, width: 400, crop: :fill, gravity: :face, class: "img-fluid rounded mb-3" %>
              <% end %>
              <h5 class="mb-0"><%= "#{teacher.first_name} #{teacher.last_name}" %></h5>
              <span><%= teacher.location %></span>
            </li>
            <% end %>
            <% end %>
          </ul>
          <!--end of row-->
        </div>
        <!--end of col-->
      </div>
      <!--end of row-->
    </div>
    <!--end of container-->
  </section>
  <!--end of section-->
</div>


