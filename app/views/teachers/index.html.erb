<%= render 'shared/navbar' %>
<%= render 'shared/flashes' %>
<div class="main-container">
   <section class="">
      <div class="container">
         <div class="row justify-content-center text-center section-intro">
            <div class="col-12 col-md-9 col-lg-8">
               <h1>Teachers</h1>
               <p>Please click on a teacher to display their full information!</p>
            </div>
         </div>
      </div>
   </section>
   <section class="flush-with-above">
      <div class="container">
         <div class="card-columns">
            <% @teachers.each do |teacher| %>
            <div class="card">
               <% if teacher.photo? %>
               <%= cl_image_tag teacher.photo.path, class: "img-fluid rounded card-img" %>
               <% else %>
               <%= image_tag "placeholder.png", class: "image-fluid rounded card-img" %>
               <% end %>
               <div class="card-footer">
                  <h5 class="mb-0"><%= "#{teacher.first_name} #{teacher.last_name}" %></h5>
                  <span><%= teacher.location %></span>
                  <%= link_to "Learn More", teacher_path(teacher), class: "btn btn-lg btn-link text-success" %>
               </div>
            </div>
            <% end %>
            <!--end of col-->
         </div>
         <!--end of row-->
      </div>
      <!--end of container-->
   </section>
   <!--end of section-->
</div>
